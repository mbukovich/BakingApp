<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="170dp"
        android:height="40dp"
        android:left="24dp">
        <shape>
            <solid android:color="@color/colorPrimary"/>
            <corners
                android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:width="23dp"
        android:height="23dp"
        android:left="25dp"
        android:top="4dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>
</layer-list>