<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment for displaying the ingredients and list of steps for a particular recipe -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recipe_steps_view"
    android:background="@color/colorBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_step_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tb_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_list_error"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>